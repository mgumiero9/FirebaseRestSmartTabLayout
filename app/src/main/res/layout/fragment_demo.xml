<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/demo_ll_init_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/demo_ll_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/primary"
                android:layout_weight="8">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/demo_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:hint="@string/type_your_name"
                    android:inputType="textAutoComplete"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    tools:ignore="MissingPrefix,UnusedAttribute" />
            </android.support.design.widget.TextInputLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/primary"
                android:layout_weight="22">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/demo_et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="@string/age"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    tools:ignore="MissingPrefix,UnusedAttribute" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/demo_b_add"
                android:elevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:enabled="true"
                android:gravity="center_vertical|end"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:text="@string/add"
                android:textColor="@color/white"
                android:background="@drawable/shape_button_primary"
                tools:ignore="RelativeOverlap" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/demo_b_reset"
                android:elevation="4dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:enabled="true"
                android:gravity="center_vertical|end"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:text="@string/reset"
                android:textColor="@color/white"
                android:background="@drawable/shape_button_primary"
                tools:ignore="RelativeOverlap" />


        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/demo_cv_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>
